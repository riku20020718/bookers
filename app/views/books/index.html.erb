<div class="flash">
  <%= flash[:notice] %>
</div>
<body>
<h1 class="books">Books</h1>



<table class="table" width="880">
  <thead class="index_thead">
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan= "3"></th>
    </tr>
  </thead>
  <tbody class="index_tbody">
    <% @books.each do |book| %>
    
    <tr>
    <td><span><%= book.title %></span></td>
    <td><span><%= book.body %></span></td>
    <td>
      <span class="books_detail"><%= link_to "Show", "/books/#{book.id}" %></span>
      <span class="books_detail"><%= link_to "Edit", edit_book_path(book.id) %></span>
      <span class="books_detail"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>
    </td>
    </tr>
    <% end %>

  </tbody>
</table>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
<% end %>
  
<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Body</p>
  <%= f.text_area :body %>
  
  <div><%= f.submit 'Create Book' %></div>
  
<% end %>
</body>